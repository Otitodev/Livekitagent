# =============================================================================
# LiveKit Voice Agent Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# LiveKit Connection (Required)
# -----------------------------------------------------------------------------
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_ROOM=agent-room
LIVEKIT_IDENTITY=agent

# -----------------------------------------------------------------------------
# Speech-to-Text: Deepgram (Required for voice input)
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your_deepgram_api_key
DEEPGRAM_MODEL=nova-2

# -----------------------------------------------------------------------------
# LLM: OpenAI (Required for AI responses)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Text-to-Speech: ElevenLabs (Required for voice output)
# -----------------------------------------------------------------------------
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id
ELEVENLABS_MODEL_ID=eleven_turbo_v2

# -----------------------------------------------------------------------------
# Session Storage: Redis (Optional - falls back to in-memory)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Database: PostgreSQL (Optional - for conversation history)
# -----------------------------------------------------------------------------
POSTGRES_USER=agent
POSTGRES_PASSWORD=agent_secret
POSTGRES_DB=agent_db
DATABASE_URL=postgresql://agent:agent_secret@localhost:5432/agent_db

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
